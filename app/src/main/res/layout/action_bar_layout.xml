<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_item_menu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:background="@null"
        android:src="@drawable/ic_action_search"
        android:textAlignment="center"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/title_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="@string/title_app"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sizeTitleBar" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_basket"
        android:layout_marginTop="14dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="17dp"
        android:layout_toLeftOf="@+id/total_price"
        android:background="@null"
        android:textAlignment="center"
        android:src="@drawable/ic_action_name"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/total_price" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_shop"
        android:textSize="8sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="7dp"
        android:gravity="center_horizontal"
        android:text="1"
        android:layout_toLeftOf="@+id/total_price"
        android:layout_toStartOf="@+id/total_price"
        android:layout_marginEnd="7dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="890 руб."
        android:textSize="@dimen/sizeText"
        android:gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="17dp"
        android:id="@+id/total_price"
        android:layout_alignParentTop="true"
        android:background="@drawable/textview_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp" />


</RelativeLayout>