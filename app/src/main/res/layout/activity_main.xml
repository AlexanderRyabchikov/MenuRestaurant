<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/listViewLinearLayout"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listViewMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:id="@+id/bottomMenuLinearLayout"
        android:layout_alignParentBottom="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:layout_height="match_parent">
            <TableRow>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/item_menu"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/ic_action_item_menu1"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/item_promo"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/ic_action_item_menu2"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/item_bonus"
                    android:src="@drawable/ic_action_item_menu3"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/item_rental"
                    android:src="@drawable/ic_action_item_menu4"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/item_other"
                    android:src="@drawable/ic_action_item_menu5"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sizeText"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/textColorSubMenu"
                    android:text="@string/menuItem1"
                    android:textAlignment="center"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sizeText"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/textColorSubMenu"
                    android:text="@string/menuItem2"
                    android:textAlignment="center"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sizeText"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/textColorSubMenu"
                    android:text="@string/menuItem3"
                    android:textAlignment="center"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sizeText"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/textColorSubMenu"
                    android:text="@string/menuItem4"
                    android:textAlignment="center"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sizeText"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/textColorSubMenu"
                    android:text="@string/menuItem5"
                    android:textAlignment="center"
                    tools:ignore="SmallSp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>